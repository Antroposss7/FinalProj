@model Category
<div class="card shadow border-primary shadow-lg mt-4">
    <div class="card-header bg-primary text-white m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center"
            <h2 class="text-white py-2"> Create Category</h2>
        </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post" class="row py-2">
            <div class="border p-3 py-2">

                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@    
                <div class="form-floating pb-2 col-12">
                    <input asp-for="Name" class="form-control border-2 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-0 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-2 shadow " />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>

                </div>
                <div class="row pt-2">
                    <div class="col-6">
                        <button type="submit" class="btn btn-outline-primary form-control">Create</button>

                    </div>
                    <div class="col-6">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-promary form-control border-1">
                            Back To List  <i class="bi bi-arrow-left"></i>
                        </a>



                    </div>

                </div>
            </div>


        </form>
    </div>
</div>
